    td::before { position: absolute; top: 0.6rem; left: 0.6rem; width: 45%; white-space: nowrap; font-weight: bold; color: #2E8B57; }
    td:nth-of-type(1)::before { content: "Company"; }
    td:nth-of-type(2)::before { content: "Amount"; }
