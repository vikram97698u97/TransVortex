<body>
    <!-- Load secure configuration first -->
  <script src="evm.js"></script>
  <script src="config-loader.js"></script>

  <script src="navbar-loader.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <div class="main-content">
    <div class="container">
      <h1><i class="fas fa-wallet"></i> Expense Records</h1>

      <!-- Tab Content -->
      <div class="tab-content" id="paymentTabsContent">
        <div class="tab-pane fade show active p-3" id="expenses" role="tabpanel" aria-labelledby="expenses-tab">
          <form id="expenseForm" class="form-group">
            <label for="expenseType">Expense Type:</label>
            <select id="expenseType" class="form-control" required>
                <option value="">Select Type</option>                
                <option value="Tyre">Tyre</option>                
                <option value="Salary">Salary</option>
                <option value="Other">Other</option>
            </select>
            <label for="expenseAmount">Amount:</label>
            <input type="number" id="expenseAmount" class="form-control" required />
            <label for="expenseDate">Date:</label>
            <input type="date" id="expenseDate" class="form-control" required />
            <label for="expenseProofFile">Upload Proof:</label>
            <input type="file" id="expenseProofFile" class="form-control" accept="image/*,application/pdf"/>
            <img id="expensePreview" class="preview" style="display:none;" />
            <button type="submit" class="btn" style="margin-top: 1rem;">Add Expense</button>
          </form>
          <input type="text" id="expenseSearchInput" placeholder="Search by type..." />
          <div class="table-responsive">
            <table>
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Type</th>
                  <th>Amount</th>
                  <th>Proof</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody id="expenseTableBody"></tbody>
            </table>
          </div>
          <!-- Pagination for Expenses -->
          <div style="margin-top: 16px;">
            <div style="display:flex; gap:12px; align-items:center; flex-wrap:wrap; margin-bottom:10px;">
              <label for="entriesPerPageExpenses" style="font-weight:600;">Entries per page:</label>
              <select id="entriesPerPageExpenses" style="padding:8px; border:1px solid #ccc; border-radius:6px;">
                <option value="5">5</option>
                <option value="10" selected>10</option>
                <option value="20">20</option>
                <option value="50">50</option>
              </select>
              <div id="entriesInfoExpenses" style="color:#666; font-size:14px;"></div>
            </div>
            <div style="display:flex; align-items:center; justify-content:center; gap:8px;">
              <button class="tab-nav-control" id="prevPageExpenses" style="padding:8px 12px; background:#43b97f; color:#fff; border:none; border-radius:4px; cursor:pointer;" disabled>
                <i class="fas fa-chevron-left"></i>
              </button>
              <div class="tab-navigation" id="tabNavigationExpenses" style="display:flex; gap:6px; flex-wrap:wrap; justify-content:center;"></div>
              <button class="tab-nav-control" id="nextPageExpenses" style="padding:8px 12px; background:#43b97f; color:#fff; border:none; border-radius:4px; cursor:pointer;">
                <i class="fas fa-chevron-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-app.js";
    import { getDatabase, ref, push, set, onValue, remove, update, query, orderByChild, equalTo, increment } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-database.js";
    import { getAuth, onAuthStateChanged, signOut } from "https://www.gstatic.com/firebasejs/10.12.2/firebase-auth.js";

    // Load Firebase configuration securely from EVM
    let firebaseConfig;
    
    try {
      // Get Firebase configuration from secure EVM system
      firebaseConfig = ConfigManager.getFirebaseConfig();
      
      // Check if we're using fallback values
      if (ConfigManager.isUsingFallbackValues()) {
        console.warn('⚠️  Using fallback Firebase configuration. Please update evm.js with real values.');
      } else {
        console.log('✅ Firebase configuration loaded securely from EVM');
      }
    } catch (error) {
      console.error('❌ Failed to load Firebase configuration:', error);
      
      // Use fallback configuration to prevent complete failure
      firebaseConfig = {
        apiKey: "placeholder-key",
        authDomain: "placeholder.firebaseapp.com", 
        databaseURL: "https://placeholder.firebaseio.com",
        projectId: "placeholder-project",
        storageBucket: "placeholder.appspot.com",
        messagingSenderId: "000000000000",
        appId: "1:000000000000:web:placeholder",
        measurementId: "G-XXXXXXXXX"
      };
    }

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const auth = getAuth();
    let currentUserUID = null;

    onAuthStateChanged(auth, user => {
      if (user) {
        currentUserUID = user.uid;
        loadExpenses();
      } else {
        window.location.href = "index.html";
      }
      window.logout = function() {
        signOut(auth).then(() => {
          window.location.href = "index.html";
        }).catch(error => {
          alert("Error logging out: " + error.message);
        });
      };
    });

    // Expense Form Elements
    const expenseForm = document.getElementById("expenseForm");
    const expenseType = document.getElementById("expenseType");
    const expenseAmount = document.getElementById("expenseAmount");
    const expenseDate = document.getElementById("expenseDate");
    const expenseProofFile = document.getElementById("expenseProofFile");
    const expensePreview = document.getElementById("expensePreview");
    const expenseSearchInput = document.getElementById("expenseSearchInput");
    const expenseTableBody = document.getElementById("expenseTableBody");
    let expenses = [];

    // Pagination state for Expenses
    const entriesPerPageSelectExpenses = document.getElementById('entriesPerPageExpenses');
    const entriesInfoExpenses = document.getElementById('entriesInfoExpenses');
    const tabNavigationExpenses = document.getElementById('tabNavigationExpenses');
    const prevPageBtnExpenses = document.getElementById('prevPageExpenses');
    const nextPageBtnExpenses = document.getElementById('nextPageExpenses');
    let currentPageExpenses = 1;
    let itemsPerPageExpenses = 10;
    let totalPagesExpenses = 1;
    let filteredExpenses = [];

    async function resizeImage(file, maxWidth = 800) {
      return new Promise((resolve) => {
        const img = document.createElement("img");
        const reader = new FileReader();
        reader.onload = (e) => { img.src = e.target.result; };
        img.onload = () => {
          const canvas = document.createElement("canvas");
          const scaleFactor = maxWidth / img.width;
          canvas.width = maxWidth;
          canvas.height = img.height * scaleFactor;
          const ctx = canvas.getContext("2d");
          ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
          canvas.toBlob((blob) => {
            resolve(new File([blob], file.name, { type: file.type }));
          }, file.type, 0.85);
        };
        reader.readAsDataURL(file);
      });
    }

    async function uploadToCloudinary(file) {
      if (file.type.startsWith("image")) {
        file = await resizeImage(file, 800);
      }
      const url = `https://api.cloudinary.com/v1_1/doqapn15f/auto/upload`;
      const preset = "payment-billing";
      const formData = new FormData();
      formData.append("file", file);
      formData.append("upload_preset", preset);
      const res = await fetch(url, { method: "POST", body: formData });
      const data = await res.json();
      return data.secure_url;
    }

    // --- EXPENSE PAYMENT LOGIC ---

    expenseProofFile.addEventListener("change", () => {
      const file = expenseProofFile.files[0];
      if (file && file.type.startsWith("image")) {
        const reader = new FileReader();
        reader.onload = () => { expensePreview.src = reader.result; expensePreview.style.display = "block"; };
        reader.readAsDataURL(file);
      } else {
        expensePreview.style.display = "none";
      }
    });

    async function handleAddExpense(e) {
      e.preventDefault();
      let fileURL = "";
      const file = expenseProofFile.files[0];
      if (file) fileURL = await uploadToCloudinary(file);

      const expenseData = {
        type: expenseType.value,
        amount: parseFloat(expenseAmount.value) || 0,
        date: expenseDate.value,
        proof: fileURL,
        userId: currentUserUID,
        createdAt: new Date().toISOString()
      };

      const newExpenseRef = push(ref(db, `users/${currentUserUID}/expenses`));
      expenseData.id = newExpenseRef.key;
      await set(newExpenseRef, expenseData);

      expenseForm.reset();
      expensePreview.style.display = "none";
    }

    expenseForm.onsubmit = handleAddExpense;

    function loadExpenses() {
      onValue(ref(db, `users/${currentUserUID}/expenses`), (snapshot) => {
        expenses = [];
        if (snapshot.exists()) {
          snapshot.forEach(child => {
            expenses.push(child.val());
          });
        }
        currentPageExpenses = 1;
        renderExpensesWithPagination();
      });
    }

    function renderExpenses(list) {
      expenseTableBody.innerHTML = "";
      list.forEach(expense => {
        const tr = document.createElement("tr");
        tr.innerHTML = `
          <td>${expense.date}</td>
          <td>${expense.type}</td>
          <td>${expense.amount}</td>
          <td>${expense.proof ? `<a href="${expense.proof}" target="_blank">View</a>` : '—'}</td>
          <td class="action-btns">
            <button onclick="editExpense('${expense.id}')">Edit</button>
            <button onclick="deleteExpense('${expense.id}')">Delete</button>
          </td>
        `;
        expenseTableBody.appendChild(tr);
      });
    }

    function computeFilteredExpenses() {
      const value = (expenseSearchInput.value || '').toLowerCase();
      return expenses.filter(p => (p.type || '').toLowerCase().includes(value));
    }

    function updatePaginationControlsExpenses(totalItems) {
      prevPageBtnExpenses.disabled = currentPageExpenses === 1;
      nextPageBtnExpenses.disabled = currentPageExpenses === totalPagesExpenses;
      entriesInfoExpenses.textContent = `Showing ${totalItems === 0 ? 0 : ((currentPageExpenses - 1) * itemsPerPageExpenses + 1)} to ${Math.min(currentPageExpenses * itemsPerPageExpenses, totalItems)} of ${totalItems} entries`;
      generatePageTabsExpenses();
    }

    function generatePageTabsExpenses() {
      tabNavigationExpenses.innerHTML = '';
      if (totalPagesExpenses <= 1) return;
      addTabExpenses(1);
      let startPage = Math.max(2, currentPageExpenses - 2);
      let endPage = Math.min(totalPagesExpenses - 1, currentPageExpenses + 2);
      if (startPage > 2) tabNavigationExpenses.appendChild(document.createTextNode('...'));
      for (let i = startPage; i <= endPage; i++) addTabExpenses(i);
      if (endPage < totalPagesExpenses - 1) tabNavigationExpenses.appendChild(document.createTextNode('...'));
      addTabExpenses(totalPagesExpenses);
    }

    function addTabExpenses(pageNumber) {
      const tab = document.createElement('div');
      tab.className = `tab ${pageNumber === currentPageExpenses ? 'active' : ''}`;
      tab.style.cssText = 'padding:6px 10px; background:#e0e0e0; border-radius:4px; cursor:pointer; min-width:36px; text-align:center;';
      tab.textContent = pageNumber;
      tab.addEventListener('click', () => { currentPageExpenses = pageNumber; renderExpensesWithPagination(); });
      tabNavigationExpenses.appendChild(tab);
    }

    function renderExpensesWithPagination() {
      filteredExpenses = computeFilteredExpenses();
      const totalItems = filteredExpenses.length;
      totalPagesExpenses = Math.max(1, Math.ceil(totalItems / itemsPerPageExpenses));
      if (currentPageExpenses > totalPagesExpenses) currentPageExpenses = totalPagesExpenses;
      updatePaginationControlsExpenses(totalItems);
      const startIndex = (currentPageExpenses - 1) * itemsPerPageExpenses;
      const endIndex = Math.min(startIndex + itemsPerPageExpenses, totalItems);
      const pageData = filteredExpenses.slice(startIndex, endIndex);
      renderExpenses(pageData);
    }

    window.editExpense = (id) => {
      const expense = expenses.find(ex => ex.id === id);
      if (!expense) return;

      expenseType.value = expense.type;
      expenseAmount.value = expense.amount;
      expenseDate.value = expense.date;
      if (expense.proof) { expensePreview.src = expense.proof; expensePreview.style.display = 'block'; }

      expenseForm.scrollIntoView({ behavior: 'smooth' });
      const submitBtn = expenseForm.querySelector('button[type="submit"]');
      submitBtn.textContent = 'Update Expense';

      expenseForm.onsubmit = async (e) => {
        e.preventDefault();
        const file = expenseProofFile.files[0];
        let fileURL = expense.proof;
        if (file) fileURL = await uploadToCloudinary(file);

        const updatedData = {
          ...expense,
          type: expenseType.value,
          amount: parseFloat(expenseAmount.value) || 0,
          date: expenseDate.value,
          proof: fileURL,
          updatedAt: new Date().toISOString()
        };
        await update(ref(db, `users/${currentUserUID}/expenses/${id}`), updatedData);
        
        expenseForm.reset();
        expensePreview.style.display = 'none';
        submitBtn.textContent = 'Add Expense';
        expenseForm.onsubmit = handleAddExpense;
      };
    };

    window.deleteExpense = (id) => {
      if (confirm("Delete this expense record?")) {
        remove(ref(db, `users/${currentUserUID}/expenses/${id}`));
      }
    };

    expenseSearchInput.addEventListener("input", () => { currentPageExpenses = 1; renderExpensesWithPagination(); });
    entriesPerPageSelectExpenses.addEventListener('change', function () { itemsPerPageExpenses = parseInt(this.value, 10) || 10; currentPageExpenses = 1; renderExpensesWithPagination(); });
    prevPageBtnExpenses.addEventListener('click', () => { if (currentPageExpenses > 1) { currentPageExpenses--; renderExpensesWithPagination(); } });
    nextPageBtnExpenses.addEventListener('click', () => { if (currentPageExpenses < totalPagesExpenses) { currentPageExpenses++; renderExpensesWithPagination(); } });

    window.toggleMenu = function () {
      document.getElementById("navLinks").classList.toggle("show");
    };
  </script>
</body>
</html>
