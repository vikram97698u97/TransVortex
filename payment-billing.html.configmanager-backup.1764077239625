    td:nth-of-type(4)::before { content: "Proof"; }
    td:nth-of-type(5)::before { content: "Actions"; }

    /* For expense table */
    #expenseTableBody td:nth-of-type(1)::before { content: "Date"; }
    #expenseTableBody td:nth-of-type(2)::before { content: "Type"; }
    #expenseTableBody td:nth-of-type(3)::before { content: "Amount"; }
    #expenseTableBody td:nth-of-type(4)::before { content: "Proof"; }
