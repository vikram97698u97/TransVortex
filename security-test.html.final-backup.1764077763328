    <!-- Load secure configuration first -->
    <script src="evm.js"></script>
    <script src="config-loader.js"></script>
    
    <script>
        function runSecurityTest() {
            const configStatus = document.getElementById('configStatus');
            const firebaseTest = document.getElementById('firebaseTest');
            const cloudinaryTest = document.getElementById('cloudinaryTest');
            const aiTest = document.getElementById('aiTest');
            const securityCheck = document.getElementById('securityCheck');
            
            try {
                // Test 1: Environment Status
                const envInfo = ConfigManager.getEnvironmentInfo();
                configStatus.innerHTML = `
                    <div class="alert ${envInfo.hasEVM ? 'alert-success' : 'alert-danger'}">
                        <strong>EVM Status:</strong> ${envInfo.hasEVM ? '‚úÖ Loaded' : '‚ùå Not Found'}<br>
                        <strong>Using Fallback:</strong> ${envInfo.usingFallback ? '‚ö†Ô∏è Yes' : '‚úÖ No'}<br>
                        <strong>Environment:</strong> ${envInfo.environment}<br>
                        <strong>Debug Mode:</strong> ${envInfo.debug ? '‚ö†Ô∏è Enabled' : '‚úÖ Disabled'}
                    </div>
                `;
                
                // Test 2: Firebase Configuration
                const firebaseConfig = ConfigManager.getFirebaseConfig();
                const firebaseSecure = !firebaseConfig.apiKey.includes('placeholder') && 
                                     !firebaseConfig.apiKey.includes('your-');
                firebaseTest.innerHTML = `
                    <div class="alert ${firebaseSecure ? 'alert-success' : 'alert-warning'}">
                        <strong>Firebase Config:</strong> ${firebaseSecure ? '‚úÖ Secure' : '‚ö†Ô∏è Using Fallback'}<br>
                        <small>API Key: ${firebaseConfig.apiKey.substring(0, 10)}...</small><br>
                        <small>Project ID: ${firebaseConfig.projectId}</small>
                    </div>
                `;
                
                // Test 3: Cloudinary Configuration
                const cloudinaryConfig = ConfigManager.getCloudinaryConfig();
                const cloudinarySecure = cloudinaryConfig.cloudName && 
                                       cloudinaryConfig.cloudName !== 'your-cloud-name';
                cloudinaryTest.innerHTML = `
                    <div class="alert ${cloudinarySecure ? 'alert-success' : 'alert-warning'}">
                        <strong>Cloudinary Config:</strong> ${cloudinarySecure ? '‚úÖ Secure' : '‚ö†Ô∏è Using Fallback'}<br>
                        <small>Cloud Name: ${cloudinaryConfig.cloudName}</small><br>
                        <small>Upload Preset: ${cloudinaryConfig.uploadPreset}</small>
                    </div>
                `;
                
                // Test 4: AI Configuration
                const aiConfig = ConfigManager.getAIConfig();
                const aiSecure = aiConfig.geminiApiKey && 
                                !aiConfig.geminiApiKey.includes('your-');
                aiTest.innerHTML = `
                    <div class="alert ${aiSecure ? 'alert-success' : 'alert-warning'}">
                        <strong>AI Config:</strong> ${aiSecure ? '‚úÖ Secure' : '‚ö†Ô∏è Using Fallback'}<br>
                        <small>Gemini API Key: ${aiConfig.geminiApiKey ? '‚úÖ Present' : '‚ùå Missing'}</small>
                    </div>
                `;
                
                // Test 5: Security Check
                securityCheck.innerHTML = `
                    <div class="alert alert-info">
                        <strong>üîê Security Verification:</strong><br>
                        ‚úÖ API keys are loaded from EVM file<br>
                        ‚úÖ No hardcoded keys in public code<br>
                        ‚úÖ Fallback system in place<br>
                        ‚úÖ Error handling implemented<br>
                        ${envInfo.usingFallback ? '‚ö†Ô∏è <strong>Update evm.js with real API keys</strong>' : '‚úÖ All configurations are secure'}
                    </div>
                `;
                
                console.log('‚úÖ Security test completed successfully');
                
            } catch (error) {
                console.error('‚ùå Security test failed:', error);
                configStatus.innerHTML = `
                    <div class="alert alert-danger">
                        <strong>‚ùå Error:</strong> ${error.message}<br>
                        Please ensure evm.js and config-loader.js are properly configured.
                    </div>
                `;
            }
        }
        
        // Run test when page loads
        document.addEventListener('DOMContentLoaded', function() {
            console.log('üîê Starting EVM security configuration test...');
            runSecurityTest();
        });
    </script>
